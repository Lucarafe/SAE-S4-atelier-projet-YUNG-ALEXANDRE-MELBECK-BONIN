{% extends "squelette/main.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block content %}
    <div class="container">
        <h1>Liste des catégories</h1>

        <ul class="article-list">
            {% for categorie in categories %}
                <li class="article-item">
                    <h3 class="article-title">{{ categorie.titre }}</h3>
                    <p class="article-date">{{ categorie.resume }}</p>
                </li>
            {% endfor %}
        </ul>
        {% if session.user is defined %}
            <a class="add-article-btn" href="{{ url_for('categoriesCreate') }}">Ajouter un article</a>
        {% endif %}
    </div>
{% endblock %}
