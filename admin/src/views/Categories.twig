{% extends "squelette/main.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block content %}
    <div class="container">
        <h1>Liste des catégories</h1>

        <ul>
            {% for categorie in categories %}
                <li>{{ categorie.titre }} - {{ categorie.resume }}</li>
            {% endfor %}
        </ul>
        {% if session.user is defined %}
            <a class="add-article-btn" href="{{ url_for('categoriesCreate') }}">Ajouter un article</a>
        {% endif %}
    </div>
{% endblock %}
