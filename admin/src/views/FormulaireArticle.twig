{% extends "squelette/main.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container">
        <h1>{{ title }}</h1>
        <form class="article-form" action="{{url_for("articleCreate")}}" method="post">
            <div class="form-group">
                <label for="titre">Titre de l'article :</label>
                <input type="text" name="titre" id="titre" required></input>
            </div>
            <div class="form-group">
                <label for="resume">Résumé de l'article :</label>
                <textarea name="resume" id="resume" rows="5" cols="30" required></textarea>
            </div>
            <div class="form-group">
                <label for="contenu">Contenu de l'article :</label>
                <textarea name="contenu" id="contenu" rows="10" cols="30" required></textarea>
            </div>
            <div class="form-group">
                <label for="Categorie">Categorie :</label>
                <select name="categorie" id="categorie">
                    {% for categorie in categories %}
                        <option value="{{categorie.id}}">{{categorie.titre}}</option>
                    {% endfor %}
                </select>
            </div>
            <input class="add-article-btn" type="submit" value="Envoyer">
        </form>
    </div>
{% endblock %}